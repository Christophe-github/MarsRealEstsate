<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="viewModel"
            type="com.example.marsrealestate.detail.DetailViewModel" />
        <variable
            name="loginViewModel"
            type="com.example.marsrealestate.login.LoginViewModel" />

    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coord_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="?colorBackground"

        app:forceDispatchInsetsToChildren="@{true}"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_toolbar_expanded_height"

            >
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="@dimen/toolbar_height"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"

                app:expandedTitleTextAppearance="@style/MyStyle.TextAppearance.CollapsingToolbar.TitleExpanded"
                app:collapsedTitleTextAppearance="@style/MyStyle.TextAppearance.CollapsingToolbar.TitleCollapsed"


                android:theme="@style/AppTheme.ImageToolbarTheme"

                >

                <ImageView
                    android:id="@+id/imageToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"

                    app:layout_collapseMode="parallax"
                    tools:src="@tools:sample/backgrounds/scenic"
                    />
                <ImageView
                    android:id="@+id/toolbar_scrim"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@color/semiTransparentDark"

                    app:layout_collapseMode="pin"

                    android:alpha="0"
                    tools:alpha="1"
                    />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height"
                    app:layout_collapseMode="pin"


                    style="@style/MyStyle.Widgets.Toolbar.ImageToolbar"

                    app:title="@{@string/property(viewModel.property.id)}"
                    tools:title="Property 4567"

                    app:navigationIcon="@drawable/ic_login"
                    tools:navigationIcon="@drawable/ic_check"
                    />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_anchor="@id/collapsing"
            app:layout_anchorGravity="bottom|end"
            android:layout_marginEnd="@dimen/margin_small"

            android:scaleX="0"
            android:scaleY="0"
            tools:scaleX="1"
            tools:scaleY="1"

            android:onClick="@{() -> viewModel.addRemovePropertyToFavorites()}"
            app:srcCompat="@drawable/an_heart"
            app:setChecked="@{viewModel.isPropertyFavorite }"

            tools:src="@drawable/ic_favorite_border"

            />


        <TextView
            android:id="@+id/snackbar_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"

            android:textColor="?colorSecondary"
            android:textAppearance="?textAppearanceSubtitle1"

            android:background="?colorSurface"

            app:layout_anchor="@id/collapsing"
            app:layout_anchorGravity="bottom|end"
            android:layout_marginEnd="75dp"
            android:elevation="4dp"

            android:visibility="invisible"

            app:transformPivot="@{1}"
            app:popupOnMessage="@{viewModel.propertyAddedRemovedToFavorites.messageId}"


            tools:text="Property saved to favorites"
            tools:visibility="visible"
            />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/extended_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:layout_gravity="bottom|end"

            app:marginBottomPlusInsets="@{@dimen/margin_small}"

            app:icon="@drawable/ic_cart"
            android:text="@{viewModel.property.rental ? @string/rent : @string/buy}"
            android:onClick="@{ () -> viewModel.navigateToPayment()}"


            tools:icon="@null"
            tools:text="Rent"

            />



        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"

            android:scrollbars="none"
            android:background="?colorBackground"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".detail.DetailFragment"
                android:layout_marginBottom="100dp"
                >

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"

                    android:text="@{viewModel.property.rental ? @string/price_a_month(viewModel.property.price) : @string/price_total(viewModel.property.price)}"
                    android:textAppearance="?textAppearanceToolbarTitle"
                    android:textSize="@{viewModel.property.rental ? @dimen/font_size_price_rent : @dimen/font_size_price_buy}"

                    app:layout_constraintEnd_toEndOf="parent"


                    app:layout_constraintHorizontal_bias="0.16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="430 000$"
                    tools:textSize="@dimen/font_size_price_buy" />


                <!--                <TextView-->
                <!--                    android:id="@+id/available_since"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    app:layout_constraintTop_toTopOf="@id/type"-->
                <!--                    app:layout_constraintEnd_toEndOf="parent"-->
                <!--                    android:layout_marginEnd="@dimen/margin_medium_large"-->

                <!--                    android:textAppearance="?textAppearanceCaption"-->
                <!--                    android:text="Available since 20/06/2019"-->

                <!--                    />-->

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/price"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/margin_medium_large"
                    android:layout_marginTop="6dp"

                    android:textAppearance="?textAppearanceHeadline6"

                    android:text="Description"

                    />

                <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/margin_very_small"
                    android:layout_marginEnd="16dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/description"

                    />

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    app:layout_constraintEnd_toEndOf="parent"

                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"

                    android:textAppearance="?textAppearanceBody1"
                    android:text="@string/lorem_medium"

                    />

                <TextView
                    android:id="@+id/paragraph_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"

                    android:textAppearance="?textAppearanceBody1"

                    android:layout_marginEnd="16dp"
                    android:text="@string/lorem_long"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toBottomOf="@id/subtitle" />




                <TextView
                    android:id="@+id/more_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/paragraph_one"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/margin_medium_large"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_very_large"


                    android:textAppearance="?textAppearanceHeadline6"

                    android:text="More images"

                    />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="@dimen/margin_very_small"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/more_images"

                    />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewpager"
                    app:layout_constraintTop_toBottomOf="@id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"

                    android:layout_marginTop="@dimen/margin_medium"

                    />




                <TextView
                    android:id="@+id/more_infos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:layout_constraintTop_toBottomOf="@id/viewpager"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_very_large"

                    android:text="@string/more_infos"
                    android:textAppearance="?textAppearanceHeadline6"


                    />
                <View
                    android:id="@+id/divider3"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/margin_very_small"
                    android:layout_marginEnd="16dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/more_infos"

                    />




                <TextView
                    android:id="@+id/paragraph_two"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"


                    android:textAppearance="?textAppearanceBody1"


                    android:text="@string/lorem_long"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider3"
                    app:layout_constraintBottom_toBottomOf="parent"

                    />





            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>




    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>