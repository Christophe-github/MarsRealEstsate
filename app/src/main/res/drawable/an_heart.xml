<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/checked"
        android:state_checked="true"
        android:drawable="@drawable/an_heart_emptying"/>

    <item
        android:id="@+id/base"
        android:drawable="@drawable/an_heart_filling"/>

    <transition
        android:drawable="@drawable/an_heart_filling"
        android:fromId="@id/base"
        android:toId="@id/checked">

    </transition>

    <transition
        android:drawable="@drawable/an_heart_emptying"
        android:fromId="@id/checked"
        android:toId="@id/base"
        />
</animated-selector>